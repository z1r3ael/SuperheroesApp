<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color_yellow">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/app_color_orange"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nicknameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Created by:"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/app_color_red"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/setNicknameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="z1r3ael"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/app_color_red"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/githubTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="GitHub:"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/app_color_red"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/setGithubTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:text="@string/github_link"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/app_color_orange"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/dateOfCreationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Date of creation:"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/app_color_red"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/setDateOfCreationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:text="16.06.2022"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/app_color_red"
                android:textSize="20sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>